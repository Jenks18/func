import React, { useState } from 'react';

export default function LeasesFilesPage() {
  const [step, setStep] = useState(0);

  const steps = [
    { id: 0, title: 'Property Details' },
    { id: 1, title: 'Lease Term' },
    { id: 2, title: 'Dates' }
  ];

  function StepContent({ stepIndex }) {
    switch (stepIndex) {
      case 0:
        return (
          <div style={{ padding: 24 }}>
            <h2 style={{ marginTop: 0 }}>Select a Property</h2>
            <p style={{ color: '#6b7280' }}>Placeholder: property list will go here.</p>
          </div>
        );
      case 1:
        return (
          <div style={{ padding: 24 }}>
            <h2 style={{ marginTop: 0 }}>Lease Term</h2>
            <p style={{ color: '#6b7280' }}>Placeholder: lease term settings.</p>
          </div>
        );
      case 2:
        return (
          <div style={{ padding: 24 }}>
            <h2 style={{ marginTop: 0 }}>Dates</h2>
            <p style={{ color: '#6b7280' }}>Placeholder: lease dates and schedule.</p>
          </div>
        );
      default:
        return (
          <div style={{ padding: 24 }}>
            <h2 style={{ marginTop: 0 }}>Unknown step</h2>
          </div>
        );
    }
  }

  return (
    <div style={{ minHeight: '100vh', padding: 24 }}>
      <div style={{ display: 'flex', gap: 20 }}>
        <nav style={{ width: 220 }}>
          {steps.map((s) => (
            <button
              key={s.id}
              onClick={() => setStep(s.id)}
              style={{ display: 'block', width: '100%', padding: 12, marginBottom: 8, textAlign: 'left' }}
            >
              {s.title}
            </button>
          ))}
        </nav>
        <main style={{ flex: 1, background: 'white', padding: 16, borderRadius: 8 }}>
          <h2 style={{ marginTop: 0 }}>Step {step + 1}: {steps[step]?.title}</h2>
          <StepContent stepIndex={step} />
        </main>
      </div>
    </div>
  );
}
